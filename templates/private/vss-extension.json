{
  "manifestVersion": 1,
  "id": "alm-octane-integration",
  "version": "0.4.2.112",
  "name": "CSDP/SDM Integration Private Extension",
  "description": "Beta version. An Azure DevOps extension that supplies the required entities for establishing an integration with CSDP/SDM.",
  "publisher": "almoctane",
  "categories": [
    "Azure Pipelines"
  ],
  "icons": {
    "default": "Icons/logo_icon.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "contributions": [
    {
      "id": "service-endpoint",
      "description": "Service endpoint type for CSDP/SDM Private Extension connections",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": ["ms.vss-endpoint.endpoint-types"],
      "properties": {
        "name": "OctaneServiceConnection",
        "displayName": "CSDP/SDM (private)",
        "url": {
          "displayName": "Server Url",
          "helpText": "CSDP/SDM Url"
        },
        "authenticationSchemes": [
          {
            "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
            "inputDescriptors": [
              {
                "id": "username",
                "name": "Client ID",
                "description": "CSDP/SDM API client ID",
                "inputMode": "textbox",
                "isConfidential": false,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                }
              },
              {
                "id": "password",
                "name": "Client Secret",
                "description": "CSDP/SDM API client secret",
                "inputMode": "passwordbox",
                "isConfidential": true,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                }
              }
            ]
          }
        ],
        "inputDescriptors": [
          {
            "id": "instance_id",
            "name": "Instance ID",
            "description": "Unique ID representing current Azure DevOps project in CSDP/SDM",
            "inputMode": "textbox",
            "validation": {
              "isRequired": true,
              "dataType": "string"
            }
          }
        ],
        "helpMarkDown": "<a href=\"https://github.com/MicroFocus/octane-azure-devops-extension/blob/master/readme.pdf\" target=\"_blank\"><b>Learn More</b></a>"
      }
    },
    {
      "id": "octane-start-task-private",
      "description": "CSDP/SDM Start Task (private)",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/StartTask"
      }
    },
    {
      "id": "octane-test-runner-start-task-private",
      "description": "CSDP/SDM Test Runner Start Task (private)",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/TestRunnerStartTask"
      }
    },
    {
      "id": "octane-end-task-private",
      "description": "CSDP/SDM End Task (private)",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/EndTask"
      }
    },
    {
      "id": "octane-get-params-task-private",
      "description": "CSDP/SDM Get Params Task (private)",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/GetParamsTask"
      }
    }
  ],
  "files": [
    {
      "path": "Tasks"
    }
  ]
}